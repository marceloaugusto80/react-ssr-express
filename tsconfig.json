{
  "exclude": ["node_modules", "tests"],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "client/*": ["client/*"],
      "shared/*": ["shared/*"],
      "server/*": ["server/*"]
    }
  }
}
