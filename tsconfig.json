{
  "exclude": ["node_modules", "tests"],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "baseUrl": "./src",
    "paths": {
      "client/*": ["client/*"],
      "shared/*": ["shared/*"],
    }
  }
}
